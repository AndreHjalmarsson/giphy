{
  "name": "giphy",
  "private": true,
  "scripts": {
    "build:styles": "node-sass src/styles/giphy.scss | cleancss --output public/assets/styles/giphy.css",
    "watch:styles": "node-sass --watch src/styles/giphy.scss public/assets/styles/giphy.css",
    "browser": "browser-sync start --server public --files public/**/*",
    "watch": "npm-run-all --parallel browser watch:styles",
    "build:scripts": "rollup --config",
    "watch:scripts": "rollup --config --watch",
    "build": "npm-run-all --parallel build:styles build:scripts"

  },
  "dependencies": {
    "browser-sync": "^2.18.6",
    "npm-run-all": "^4.0.1",
    "query-string": "^4.3.0",
    "rollup": "^0.41.4",
    "sanitize.css": "^4.1.0"
  },
  "devDependencies": {
    "clean-css": "^3.4.23",
    "node-sass": "^4.3.0",
    "rollup-watch": "^3.2.2"
  }
}
